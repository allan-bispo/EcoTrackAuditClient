generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Industry {
  id          String    @id @default(cuid())
  name        String
  type        String
  status      String    @default("active")
  location    String
  capacity    Int
  description String?
  details     Json?
  maxCO2Emission Float  @default(1000.0) // Em toneladas por mÃªs
  currentCO2Emission Float @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  alerts      Alert[]
}

model Alert {
  id          String        @id @default(cuid())
  title       String
  severity    String
  status      String
  description String
  resolvedAt  DateTime?
  details     Json
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  industryId  String?
  industry    Industry?     @relation(fields: [industryId], references: [id])
  actions     AlertAction[]
}

model AlertAction {
  id          String   @id @default(cuid())
  type        String
  description String
  date        DateTime
  status      String
  alertId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  alert       Alert    @relation(fields: [alertId], references: [id])
}
